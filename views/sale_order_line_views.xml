<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Heredar vista tipo Ã¡rbol de sale.order.line -->
    <record id="view_order_line_tree_inherit_material_risk" model="ir.ui.view">
        <field name="name">sale.order.line.tree.inherit.material.risk</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_unit']" position="after">
                <field name="is_hazardous_material"/>
            </xpath>
        </field>
    </record>

    <!-- Heredar vista tipo formulario de sale.order.line -->
    <record id="view_order_line_form_inherit_material_risk" model="ir.ui.view">
        <field name="name">sale.order.line.form.inherit.material.risk</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_unit']" position="after">
                <field name="is_hazardous_material"/>
            </xpath>
        </field>
    </record>
</odoo>
